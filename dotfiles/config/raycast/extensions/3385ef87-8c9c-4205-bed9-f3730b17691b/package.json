{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "remember-the-date",
  "title": "Remember the Date",
  "description": "Creates and shows the most important date which should be remembered.",
  "icon": "icon.png",
  "author": "pernielsentikaer",
  "contributors": [
    "samuelkraft",
    "ridemountainpig",
    "aryan_thatte",
    "0xdhrv"
  ],
  "license": "MIT",
  "keywords": [
    "date",
    "remember",
    "countdown",
    "important"
  ],
  "commands": [
    {
      "name": "index",
      "title": "Create Date",
      "subtitle": "Remember the Date",
      "description": "Create new date to remember",
      "mode": "view",
      "icon": "add.png"
    },
    {
      "name": "list",
      "title": "Days List",
      "subtitle": "Remember the Date",
      "description": "List of all dates to remember",
      "mode": "view"
    },
    {
      "name": "menu-bar",
      "title": "Menu Bar Days List",
      "description": "List of all dates to remember in the menu bar",
      "mode": "menu-bar",
      "interval": "1d"
    },
    {
      "name": "up-next",
      "title": "Up Next",
      "description": "Show the next date to remember",
      "mode": "no-view",
      "interval": "1d"
    }
  ],
  "tools": [
    {
      "name": "add-date",
      "title": "Add Date",
      "description": "Add a new date to remember",
      "path": "src/tools/add-date.ts",
      "instructions": "Add a new date to remember",
      "input": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the date to remember"
          },
          "subtitle": {
            "type": "string",
            "description": "Optional description or subtitle"
          },
          "date": {
            "type": "string",
            "description": "The date in YYYY-MM-DD format"
          }
        },
        "required": [
          "name",
          "date"
        ]
      },
      "confirmation": false
    },
    {
      "name": "list-dates",
      "title": "List Dates",
      "description": "List all remembered dates",
      "path": "src/tools/list-dates.ts",
      "instructions": "List all remembered dates",
      "input": {
        "type": "object",
        "properties": {
          "filter": {
            "type": "string",
            "description": "Optional filter to search dates by name or subtitle"
          }
        },
        "required": []
      },
      "confirmation": false
    },
    {
      "name": "delete-date",
      "title": "Delete Date",
      "description": "Delete a remembered date",
      "path": "src/tools/delete-date.ts",
      "instructions": "Delete a remembered date by ID",
      "input": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "The ID of the date to delete"
          }
        },
        "required": [
          "id"
        ]
      },
      "confirmation": false
    },
    {
      "name": "edit-date",
      "title": "Edit Date",
      "description": "Edit a remembered date",
      "path": "src/tools/edit-date.ts",
      "instructions": "Edit an existing remembered date",
      "input": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "The ID of the date to edit"
          },
          "name": {
            "type": "string",
            "description": "The new name of the date"
          },
          "subtitle": {
            "type": "string",
            "description": "The new description or subtitle"
          },
          "date": {
            "type": "string",
            "description": "The new date in YYYY-MM-DD format"
          }
        },
        "required": [
          "id"
        ]
      },
      "confirmation": false
    }
  ],
  "preferences": [
    {
      "name": "showDate",
      "type": "checkbox",
      "required": false,
      "default": false,
      "title": "Show the date",
      "description": "Should the date be visible in the list",
      "label": "Yes, show date in the list"
    },
    {
      "name": "showCountdownByDay",
      "type": "checkbox",
      "required": false,
      "default": false,
      "title": "Countdown unit",
      "description": "Show the countdown in days.",
      "label": "Show the countdown in days"
    }
  ],
  "categories": [
    "Productivity"
  ],
  "ai": {
    "evals": [
      {
        "input": "@remember-the-date add my birthday on December 25th 2024",
        "mocks": {
          "add-date": {
            "success": true,
            "message": "Successfully added \"my birthday\" to your remembered dates.",
            "item": {
              "id": "test-id-123",
              "name": "my birthday",
              "subtitle": "",
              "date": "2024-12-25",
              "icon": "calendar",
              "color": "blue"
            }
          }
        },
        "expected": [
          {
            "callsTool": "add-date"
          }
        ]
      },
      {
        "input": "@remember-the-date remember a week ago as my cat's 2nd birthday",
        "mocks": {
          "add-date": {
            "success": true,
            "message": "Successfully added \"Cat's 2nd birthday\" to your remembered dates.",
            "item": {
              "id": "test-id-456",
              "name": "Cat's 2nd birthday",
              "subtitle": "",
              "date": "2025-11-18",
              "icon": "calendar",
              "color": "blue"
            }
          }
        },
        "expected": [
          {
            "callsTool": "add-date",
            "input": {
              "name": "Cat's 2nd birthday",
              "subtitle": "",
              "date": "2025-11-18"
            }
          }
        ]
      },
      {
        "input": "@remember-the-date add yesterday as the day I finished my project",
        "mocks": {
          "add-date": {
            "success": true,
            "message": "Successfully added \"The day I finished my project\" to your remembered dates.",
            "item": {
              "id": "test-id-123",
              "name": "The day I finished my project",
              "subtitle": "",
              "date": "2025-11-24",
              "icon": "calendar",
              "color": "blue"
            }
          }
        },
        "expected": [
          {
            "callsTool": "add-date",
            "input": {
              "name": "The day I finished my project",
              "subtitle": "",
              "date": "2025-11-24"
            }
          }
        ]
      },
      {
        "input": "@remember-the-date remember 3 days ago as my doctor appointment",
        "mocks": {
          "add-date": {
            "success": true,
            "message": "Successfully added \"Doctor appointment\" to your remembered dates.",
            "item": {
              "id": "test-id-789",
              "name": "Doctor appointment",
              "subtitle": "",
              "date": "2025-11-22",
              "icon": "calendar",
              "color": "blue"
            }
          }
        },
        "expected": [
          {
            "callsTool": "add-date",
            "input": {
              "name": "Doctor appointment",
              "subtitle": "",
              "date": "2025-11-22"
            }
          }
        ]
      },
      {
        "input": "@remember-the-date add wedding anniversary as the day we got married in Hawaii",
        "mocks": {
          "add-date": {
            "success": true,
            "message": "Successfully added \"Wedding anniversary\" to your remembered dates.",
            "item": {
              "id": "test-id-789",
              "name": "Wedding anniversary",
              "subtitle": "The day we got married in Hawaii",
              "date": "2024-06-15",
              "icon": "calendar",
              "color": "blue"
            }
          }
        },
        "expected": [
          {
            "callsTool": "add-date",
            "input": {
              "name": "Wedding anniversary",
              "subtitle": "The day we got married in Hawaii",
              "date": "2024-06-15"
            }
          }
        ]
      },
      {
        "input": "@remember-the-date add last Friday as my job interview",
        "mocks": {
          "add-date": {
            "success": true,
            "message": "Successfully added \"Job interview\" to your remembered dates.",
            "item": {
              "id": "test-id-999",
              "name": "Job interview",
              "subtitle": "",
              "date": "2025-11-21",
              "icon": "calendar",
              "color": "blue"
            }
          }
        },
        "expected": [
          {
            "callsTool": "add-date",
            "input": {
              "name": "Job interview",
              "subtitle": "",
              "date": "2025-11-21"
            }
          }
        ]
      },
      {
        "input": "@remember-the-date show me all my dates",
        "mocks": {
          "list-dates": {
            "success": true,
            "count": 2,
            "items": [
              {
                "id": "test-id-1",
                "name": "Anniversary",
                "subtitle": "Wedding anniversary",
                "date": "2024-06-15"
              },
              {
                "id": "test-id-2",
                "name": "Birthday",
                "subtitle": "Mom's birthday",
                "date": "2024-08-22"
              }
            ]
          }
        },
        "expected": [
          {
            "callsTool": "list-dates"
          }
        ]
      },
      {
        "input": "@remember-the-date find dates with birthday",
        "mocks": {
          "list-dates": {
            "success": true,
            "count": 1,
            "items": [
              {
                "id": "test-id-2",
                "name": "Birthday",
                "subtitle": "Mom's birthday",
                "date": "2024-08-22"
              }
            ]
          }
        },
        "expected": [
          {
            "callsTool": "list-dates"
          }
        ]
      },
      {
        "input": "@remember-the-date edit the anniversary date to June 16th 2024",
        "mocks": {
          "list-dates": {
            "success": true,
            "count": 1,
            "items": [
              {
                "id": "test-id-1",
                "name": "Anniversary",
                "subtitle": "Wedding anniversary",
                "date": "2024-06-15"
              }
            ]
          },
          "edit-date": {
            "success": true,
            "message": "Successfully updated \"Anniversary\".",
            "originalItem": {
              "id": "test-id-1",
              "name": "Anniversary",
              "subtitle": "Wedding anniversary",
              "date": "2024-06-15"
            },
            "updatedItem": {
              "id": "test-id-1",
              "name": "Anniversary",
              "subtitle": "Wedding anniversary",
              "date": "2024-06-16"
            }
          }
        },
        "expected": [
          {
            "callsTool": "list-dates"
          },
          {
            "callsTool": "edit-date"
          }
        ]
      },
      {
        "input": "@remember-the-date delete the birthday date",
        "mocks": {
          "list-dates": {
            "success": true,
            "count": 1,
            "items": [
              {
                "id": "test-id-2",
                "name": "Birthday",
                "subtitle": "Mom's birthday",
                "date": "2024-08-22"
              }
            ]
          },
          "delete-date": {
            "success": true,
            "message": "Successfully deleted \"Birthday\" from your remembered dates.",
            "deletedItem": {
              "id": "test-id-2",
              "name": "Birthday",
              "subtitle": "Mom's birthday",
              "date": "2024-08-22"
            }
          }
        },
        "expected": [
          {
            "callsTool": "list-dates"
          },
          {
            "callsTool": "delete-date"
          }
        ]
      }
    ]
  },
  "dependencies": {
    "@raycast/api": "^1.103.7",
    "@raycast/utils": "^2.2.2",
    "moment": "^2.30.1",
    "nanoid": "^5.1.6"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.1.1",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "platforms": [
    "macOS",
    "Windows"
  ]
}