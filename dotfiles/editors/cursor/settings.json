{
	"editor.defaultFormatter": "Shopify.ruby-lsp",
	"editor.fontFamily": "'JetBrainsMono Nerd Font',Menlo, Monaco, 'Courier New', monospace",
	"editor.fontSize": 12,
	"editor.formatOnSave": true,
	"editor.formatOnSaveMode": "file",
	"editor.formatOnType": true,
	"editor.tabSize": 2,
	"editor.lineNumbers": "on",
	"search.mode": "reuseEditor",
//	"terminal.external.osxExec": "Ghostty.app",
	"terminal.integrated.fontSize": 12,
	"vim.easymotion": false,
	"vim.useSystemClipboard": true,
	"window.commandCenter": true,
	"workbench.activityBar.location": "hidden",
	"workbench.activityBar.orientation": "vertical",
	"workbench.colorTheme": "Catppuccin Frapp√©",
	"cursor.composer.shouldAllowCustomModes": true,
	"application.shellEnvironmentResolutionTimeout": 15,
	"git.autofetch": true,
	"datadog.telemetry.setup.enableTelemetry": "disabled",
	"datadog.staticAnalysis.notification.suppressOnboarding": true,
	"snowflake.connectionsConfigFile": "/Users/doug/.snowflake/connections.toml",
	"explorer.confirmDelete": false,
	"git.openRepositoryInParentFolders": "always",
	"[dockercompose]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2,
		"editor.autoIndent": "advanced",
		"editor.quickSuggestions": {
			"other": true,
			"comments": false,
			"strings": true
		},
		"editor.defaultFormatter": "redhat.vscode-yaml"
	},
	"[github-actions-workflow]": {
		"editor.defaultFormatter": "redhat.vscode-yaml"
	},
	"editor.accessibilitySupport": "on",
	"accessibility.signals.terminalCommandSucceeded": {
		"sound": "off"
	},
	"datadog.connection.notification.suppressSignInNotification": true,
	"rubyLsp.rubyVersionManager": {
		"identifier": "mise"
	},
	"update.releaseTrack": "dev",
	"update.mode": "silentlyApplyOnQuit",
	"githubPullRequests.pullBranch": "never",
}
